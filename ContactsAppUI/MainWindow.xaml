<Window
	x:Class="ContactsAppUI.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ContactsAppUI"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="ContactsApp"
	Width="800"
	Height="450"
	Background="Gainsboro"
	Icon="Resources/53.png"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="0.2*"/>
		</Grid.RowDefinitions>

		<Menu Grid.ColumnSpan="2" VerticalAlignment="Top">
			<MenuItem Header="File">
				<MenuItem Header="Exit" />
			</MenuItem>
			<MenuItem Header="Edit">
				<MenuItem Header="Add Contact" />
				<MenuItem Header="Edit Contact" />
				<MenuItem Header="Remove Contact" />
			</MenuItem>
			<MenuItem Header="Help">
				<MenuItem Header="About" />
			</MenuItem>
		</Menu>

		<local:ListСontacts
			Grid.Row="1"
			Grid.RowSpan="2"
			Grid.Column="0" />
		<local:ContactInformation
			Grid.Row="1"
			Grid.Column="1"
			Margin="5,5,5,5"
			VerticalAlignment="Top" />
		<local:Birthday Grid.Row="2" Grid.Column="1" />
	</Grid>
</Window>
