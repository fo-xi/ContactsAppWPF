<UserControl
    x:Class="ContactsAppUI.Controls.Birthday"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlsVm="clr-namespace:ViewModel.ControlsVM;assembly=ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsAppUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
    d:DataContext="{d:DesignInstance controlsVm:BirthdayVM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="SkyBlue"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image
            x:Name="image"
            Grid.Column="0"
            Margin="8"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Image.Source>
                <FormatConvertedBitmap Source="../Resources/alert.png" />
            </Image.Source>
        </Image>
        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <TextBlock Text="Сегодня день рождения:" />

            <TextBlock Text="{Binding ListBirthdayContact}" />
        </StackPanel>
    </Grid>
</UserControl>
