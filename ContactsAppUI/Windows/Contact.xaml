<Window
    x:Class="ContactsAppUI.Windows.Contact"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsAppUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
    xmlns:windowsVm="clr-namespace:ViewModel.WindowsVM;assembly=ViewModel"
    Title="Contact"
    Width="500"
    Height="250"
    d:DataContext="{d:DesignInstance windowsVm:ContactVM}"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Window.Icon>
        <DrawingImage />
    </Window.Icon>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition SharedSizeGroup="button" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <local:ContactInformation
            Grid.Column="1"
            Margin="10,10,10,0"
            DataContext="{Binding Contact}" />

        <Grid
            Grid.Row="1"
            Margin="10,5,10,10"
            HorizontalAlignment="Right"
            Grid.IsSharedSizeScope="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="button" />
                <ColumnDefinition SharedSizeGroup="button" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="buttonOK"
                Grid.Column="0"
                Margin="0,0,0,0"
                Command="{Binding OKCommand}"
                Content="OK"
                IsEnabled="{Binding IsEnabledButton}" />
            <Button
                x:Name="buttonCancel"
                Grid.Column="1"
                Margin="10,0,0,0"
                Command="{Binding CancelCommand}">
                <ContentControl>
                    <TextBlock
                        Width="75"
                        Margin="5,0,5,0"
                        Text="Cancel"
                        TextAlignment="Center" />
                </ContentControl>
            </Button>
        </Grid>

    </Grid>
</Window>
